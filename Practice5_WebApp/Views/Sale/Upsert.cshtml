@model Practice5_Model.Models.Sale

@{
    var title = "Create Sale";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Sale_Id" />
        @if (Model.Sale_Id != 0)
        {
            title = "Edit Sale";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="QuantitySold"></label>
                </div>
                <div class="col-8">
                    <input asp-for="QuantitySold" class="form-control" />
                    <span asp-validation-for="QuantitySold" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="SaleDate"></label>
                </div>
                <div class="col-8">
                    <input asp-for="SaleDate" class="form-control" />
                    <span asp-validation-for="SaleDate" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="SalePrice"></label>
                </div>
                <div class="col-8">
                    <input asp-for="SalePrice" class="form-control" />
                    <span asp-validation-for="SalePrice" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="TotalAmount"></label>
                </div>
                <div class="col-8">
                    <input asp-for="TotalAmount" class="form-control" />
                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="CustomerName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CustomerName" class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                 <div class="col-4">
                    <label asp-for="Product_Id"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product_Id" class="form-control" />
                    <span asp-validation-for="Product_Id" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    @if (Model.Sale_Id != 0)
                    {
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                    }
                    else
                    {
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                    }
                </div>
                <div class="col-4">
                    <a asp-action="SaleIndex" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
            <partial name="_ValidationScriptsPartial" />
}
