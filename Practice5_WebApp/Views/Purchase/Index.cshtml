@model IEnumerable<Practice5_Model.Models.Purchase>

<br />
<br />
<div class="border p-4 bg-white">
	<div class="row">
		<div class="col-9">
			<h2 class="text-info"> Purchase List</h2>
		</div>

		<div class="col-3 text-right">
			<a asp-action="Upsert" class="btn btn-info form-control"> Create New </a>
		</div>
	</div>
	</div>
	<br />
	<div>
	@if (Model.Count() > 0)
	{
											<table class="table table-striped border">
												<tr class="table-secondary">
													<th>
														Purchase Quantity
													</th>
														<th>
														   Purchase Date
														</th>
															<th>
															Purchase Price
														</th>
															<th>
															Total Cost
														</th>
													<th>Customer Name</th>
														<th>Product Id</th>
												</tr>
			@foreach (var item in Model)
			{
																					<tr>
																						<td>
						@item.QuantityPurchased
																						</td>
																								 <td>
						@item.PurchaseDate
																								</td>
																										 <td>
						@item.PurchasePrice
																								</td>
																										 <td>
						@item.TotalCost
																								</td>
																											 <td>
						@item.Product_Id
																										</td>
																						<td>
																							<a class="btn btn-primary text-white" asp-action="Upsert" asp-route-Id="@item.Purchase_Id">
																							   Edit
																							</a>

																							<a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Purchase_Id">
																								Delete
																							</a>
																						</td>
																					</tr>
			}
											</table>
	}
	else
	{
											<p>No Sales exists...</p>
	}
	</div>
</div>