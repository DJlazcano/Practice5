@model IEnumerable<Practice5_Model.Models.Product>

<br />
<br />
<div class="border p-4 bg-white">
	<div class="row">
		<div class="col-9">
			<h2 class="text-info"> Product List</h2>
		</div>

		<div class="col-3 text-right">
			<a asp-action="Upsert" class="btn btn-info form-control"> Create New </a>
		</div>
	</div>
	</div>
	<br />
	<div>
	@if (Model.Count() > 0)
	{
							<table class="table table-striped border">
								<tr class="table-secondary">
									<th>
										Product Name
									</th>
										<th>
										   Description
										</th>
											<th>
											Price
										</th>
											<th>
											QuantityInStock
										</th>
									<th></th>
								</tr>
			@foreach (var item in Model)
			{
													<tr>
														<td>
						@item.ProductName
														</td>
																 <td>
						@item.Description
																</td>
																		 <td>
						@item.Price
																</td>
																		 <td>
						@item.QuantityInStock
																</td>
														<td>
															<a class="btn btn-primary text-white" asp-action="Upsert" asp-route-Id="@item.Product_Id">
															   Edit
															</a>

															<a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Product_Id">
																Delete
															</a>
														</td>
													</tr>
			}
							</table>
	}
	else
	{
							<p>No Product exists...</p>
	}
	</div>
</div>